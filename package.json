{
  "name": "koa-decorator-ts",
  "version": "2.3.0",
  "description": "koa decorator",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "cross-env NODE_ENV=test jest  --no-cache --forceExit --runInBand"
  },
  "author": "skmdev29 <skmdev29@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skmdev/koa-decorator-ts.git"
  },
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.3",
    "koa": "^2.5.3",
    "koa-compose": "^4.1.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0"
  },
  "devDependencies": {
    "@types/glob": "^5.0.36",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.32",
    "@types/node": "^9.6.32",
    "@types/supertest": "^2.0.6",
    "apollo-server-koa": "^2.1.0",
    "cross-env": "^5.2.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.5.3",
    "graphql-tools": "^2.24.0",
    "jest": "^22.4.4",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.3.0",
    "koa-bodyparser": "^4.2.1",
    "koa-graphql": "^0.7.5",
    "supertest": "^3.3.0",
    "ts-node": "^6.2.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "bugs": {
    "url": "https://github.com/skmdev/koa-decorator-ts/issues"
  },
  "homepage": "https://github.com/skmdev/koa-decorator-ts#readme"
}
